<div id="cms-block-{{ block.id }}" class="cms-block cms-block-element">
    {% block block %}
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">
                    <i class="fa fa-ticket"></i> {{ settings.title }}
                </h3>
            </div>
            <div class="box-body">

                <table class="sonata-order-block-order-container table table-condensed">
                    <tbody>
                    {% for ticket in tickets %}
                    <tr>
                        <td><a href="#">{{ ticket.identifiant  }}</a></td>
                        <td class="number"><span class="label label-info">{{ ticket.typeBillet.libelle }} </span></td>
                        <td><span class="label label-info">{{ ticket.typeBillet.evenement.titreEvenement }}</span></td>
                        <td>{{ ticket.reservation.dateReservation|date() }}</td>
                    </tr>
                    {% else %}
                        <tr>
                            <td>Aucune Réservation à afficher</td>
                        </tr>
                    {% endfor %}
                    </tbody></table>
            </div>

            <div class="box-footer">
                <a href="{{ admin.generateUrl('list') }}" class="btn btn-primary btn-block"><i class="fa fa-list"></i>&nbsp;Afficher tous les billets</a>
            </div>
        </div>
    {% endblock %}
</div>
