{% block craue_flow_stepList_class %}
	{%- if loop.index == flow.getCurrentStepNumber() -%}
		{{ ' class="craue_formflow_current_step list-group-item list-group-item-action bg-secondary text-white"' }}
	{%- elseif flow.isStepSkipped(loop.index) -%}
		{{ ' class="craue_formflow_skipped_step  list-group-item list-group-item-action bg-light"' }}
	{%- elseif flow.isStepDone(loop.index) -%}
		{{ ' class="craue_formflow_done_step list-group-item list-group-item-action bg-light"' }}
	{%- else -%}
		{{ ' class="list-group-item list-group-item-action bg-light"' }}
	{%- endif -%}
{% endblock %}

{% block craue_flow_stepLabel %}
	{{- stepLabel | trans -}}
{% endblock %}
