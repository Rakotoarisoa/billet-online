                            {{ event.lieuEvenement.nomSalle }} ,{{ event.lieuEvenement.pays }} <br />
                            {{ event.organisation }}</p>
                        </td>
                        <td>20/616</td>
                        <td>300 Euro</td>
                        <td>Ventes achevées</td>
                        <td>                           
                            <button type="button" class="btn btn-info btn-sm rakoto">
                                 <i class="fa fa-bars" id="flip"></i>                                    
                            </button>                            
                            <ul class="list-group" id="show-{{event.id}}" style="display:none;">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <a href="{{ path('viewEventUpdate',{'user':app.user.id,'id':event.id}) }}" style="font-size:12px">Modifier</a>                                       
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Supprimer                                        
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Copier l'evenement                                        
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Copier l'url                                        
                                </li>
                            </ul>                            
                        </td>
                    </tr>
                    {% endfor %}
