                            <div class="col">
                                <input type="text" name="event_name" value="{{ event_name }}" class="form-control" placeholder="Rechercher des evenements">
                            </div>
                            <div class="col">
                                <input type="text" name="event_state"  value="{{ event_state }}" class="form-control" placeholder="Etat de l'événement">
