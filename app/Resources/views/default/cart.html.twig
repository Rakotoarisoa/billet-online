{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css"
          href="https://cdn.datatables.net/v/bs4/dt-1.10.18/r-2.2.2/sl-1.3.0/datatables.min.css"/>
{% endblock %}
{% block head_javascripts %}

{% endblock %}
{% block breadcrumb %}
{% endblock %}
{% block body %}
    <!-- ##### Events Area Start ##### -->
    {% block content %}
        <div class="row justify-content-center"><h2>Commande de billets</h2></div>
        <section class="section-padding-0-100">
            {{ parent() }}
            {% if (cart|length >0) %}
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active" aria-current="page">Commander</li>
                        <li class="breadcrumb-item">Informations Acheteur</li>
                        <li class="breadcrumb-item">Validation</li>
                    </ol>
                </nav>
                <div class="accordion" id="checkoutAccordion">
                    <div class="card">
                        <div class="card-header" id="headingOne">
                            <h2 class="mb-0">
                                <button class="btn btn-link" type="button" data-toggle="collapse"
                                        data-target="#checkoutStep1" aria-expanded="true" aria-controls="collapseOne">
                                    1. Commande <span class="fa fa-shopping-cart"></span>
                                </button>
                            </h2>
                        </div>
                        <div id="checkoutStep1" class="collapse show" aria-labelledby="headingOne"
                             data-parent="#checkoutAccordion">
                            <div class="card-body">
                                <div class="container">
                                    <div class="row">
                                        <div class="card-text ">
                                            <p>
                                                <small>Vous pouvez modifier votre commande en ajoutant ou <span
                                                            class="text text-warning">en supprimant</span> quelques
                                                    articles ci-dessous
                                                </small>
                                            </p>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="card-text"><p>Vos commandes:</p></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12 col-lg-12">
                                            <table id="cart" class="table table-hover table-condensed table-borderless">
                                                <thead>
                                                <tr>
                                                    <th>Billets</th>
                                                    <th>Type de billet</th>
                                                    <th>Evenement</th>
                                                    <th>Section ou table</th>
                                                    <th>N° chaise</th>
                                                    <th>Prix</th>
                                                    <th>Sous-total</th>
                                                    <th></th>
                                                </tr>
                                                </thead>

                                                <tbody>

                                                {% for item in cart %}
                                                    <tr>
                                                        <td>{{ item.name }}</td>
                                                        <td>{{ item.categoryStr }}</td>
                                                        <td>{{ item.event }}</td>
                                                        <td>{{ item.section }}</td>
                                                        <td>{{ item.seat }}</td>
                                                        <td>€ {{ item.price }}</td>
                                                        <td data-th="Subtotal" class="text-center">
                                                            {% set var_1 = 0 + item.quantity|number_format(2,'.',',') %}

                                                            € {{ (var_1 * item.price)|number_format(2,'.',',') }}
                                                        </td>
                                                        <td>
                                                            <a class="btn btn-danger btn-sm"
                                                               href="{{ path('cart_remove',{'id': item.id}) }}"><i
                                                                        class="fa fa-trash-o"></i></a>
                                                        </td>
                                                    </tr>
                                                {% endfor %}

                                                </tbody>
                                                <tfoot>
                                                <tr class="visible-xs">
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td class="hidden-xs text-center"><strong>Total
                                                            €{{ not app.session.get('totalPrice') ? "0" : app.session.get('totalPrice') }}</strong>
                                                    </td>
                                                </tr>
                                                <!--<tr>
                                <form action="" method="post">
                                    <td><input type="text" name="coupon" class="form-control" value="">
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"></td>
                                    <td><button type="submit" class="btn btn-success btn-block">Redeem Coupon</button></td>
                                    <td class="hidden-xs text-center"></td>
                                    <td></td>
                                </form>
                            </tr>-->
                                                </tfoot>
                                            </table>
                                            <div class="row mb-30 justify-content-center">
                                                <div class="col-sm-4"><a href="{{ path('viewList') }}"><i
                                                                class="fa fa-angle-left"></i>
                                                        Retourner à la page d'accueil</a></div>
                                                <div class="col-sm-4"><a class="btn btn-info"
                                                                         href="{{ path('cart_clear') }}">Vider le panier
                                                        <i class="fa fa-refresh"></i></a></div>
                                                <div class="col-sm-4">
                                                    <a id="validateStep1" class="btn btn-success text-light">Valider et
                                                        continuer</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headingTwo">
                            <h2 class="mb-0">
                                <button class="btn btn-link collapsed" type="button" data-toggle="collapse"
                                        data-target="#checkoutStep2" aria-expanded="false" aria-controls="collapseTwo">
                                    2. Informations Acheteur (optionnel) <span class="fa fa-info"></span>
                                </button>
                            </h2>
                        </div>
                        <div id="checkoutStep2" class="collapse" aria-labelledby="headingThree"
                             data-parent="#checkoutAccordion">
                            <div class="card-body">
                                <div class="section-padding-0-100">
                                    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register','enctype':'multipart/form-data'}}) }}
                                    <p class="alert-danger">{{ form_errors(form) }}</p>
                                    <div class="row">
                                        <div class="col">
                                            <hr/>
                                        </div>
                                        <div class="col-auto">Informations personnelles</div>
                                        <div class="col">
                                            <hr/>
                                        </div>
                                    </div>

                                    <div class="form-group col-md-6">
                                        <div class="row">
                                            {{ form_label(form.nom) }}
                                        </div>
                                        <div class="row">
                                            {{ form_widget(form.nom) }}
                                        </div>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <div class="row">
                                            {{ form_label(form.prenom) }}
                                        </div>
                                        <div class="row">
                                            {{ form_widget(form.prenom) }}
                                        </div>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <div class="row">
                                            {{ form_label(form.sexe) }}
                                        </div>
                                        <div class="row">
                                            {{ form_widget(form.sexe) }}
                                        </div>
                                        <div class="row">
                                            {{ form_errors(form.sexe) }}
                                        </div>
                                    </div>

                                    <div class="form-group col-md-6">
                                        <div class="row">
                                            {{ form_label(form.date_de_naissance) }}</div>
                                        <div class="row">
                                            {{ form_widget(form.date_de_naissance) }}
                                        </div>
                                        <div class="row">
                                            {{ form_errors(form.date_de_naissance) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <hr/>
                                        </div>
                                        <div class="col-auto">Informations de connexion</div>
                                        <div class="col">
                                            <hr/>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-6">
                                        {{ form_label(form.username) }}
                                        {{ form_widget(form.username) }}
                                        {{ form_errors(form.username) }}
                                    </div>
                                    <div class="form-group col-md-6">
                                        {{ form_widget(form.plainPassword) }}
                                        {{ form_errors(form.plainPassword) }}
                                    </div>
                                    <div class="form-group col-md-6">
                                        {{ form_label(form.email) }}
                                        {{ form_widget(form.email) }}
                                        {{ form_errors(form.email) }}
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <hr/>
                                        </div>
                                        <div class="col-auto">Contacts</div>
                                        <div class="col">
                                            <hr/>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-6">
                                        {{ form_label(form.adresse) }}
                                        {{ form_widget(form.adresse) }}
                                        {{ form_errors(form.adresse) }}
                                    </div>
                                    <div class="form-row col-md-6">
                                        <div class="col">
                                            {{ form_label(form.region) }}
                                            {{ form_widget(form.region) }}
                                        </div>
                                        <div class="col">
                                            {{ form_label(form.pays) }}
                                            {{ form_widget(form.pays) }}
                                        </div>
                                        <div class="col">
                                            {{ form_label(form.code_postal) }}
                                            {{ form_widget(form.code_postal) }}
                                        </div>
                                    </div>
                                    <div class="form-group col-md-6 col-sm-10">
                                        {{ form_label(form.mobile_phone) }}
                                        {{ form_widget(form.mobile_phone) }}
                                    </div>
                                    <hr/>
                                    <div class="form-group col-md-6 col-sm-10">
                                        {{ form_label(form.phone) }}
                                        {{ form_widget(form.phone) }}
                                    </div>

                                    <div class="form-group col-md-6 col-sm-10">
                                        {{ form_label(form.website) }}
                                        {{ form_widget(form.website) }}
                                        {{ form_errors(form.website) }}
                                    </div>
                                    <div class="form-group col-md-6 col-sm-10">
                                        {{ form_label(form.blog) }}
                                        {{ form_widget(form.blog) }}
                                        {{ form_errors(form.blog) }}
                                    </div>
                                    <div class="form-group col-md-6 col-sm-10">
                                        {{ form_label(form.image) }}
                                        {{ form_widget(form.image) }}
                                        {{ form_errors(form.image) }}
                                        <small class="text text-muted">L'image ne doit pas dépasser 1024Mo. L'image
                                            servira de couverture pour votre organisation
                                        </small>
                                    </div>
                                    <div class="form-group col-md-6 col-sm-10">
                                        <input class="btn  mt-30" type="submit"
                                               value="{{ 'registration.submit'|trans }}"/>
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headingThree">
                            <h2 class="mb-0">
                                <button class="btn btn-link" type="button" data-toggle="collapse"
                                        data-target="#checkoutStep3" aria-expanded="true" aria-controls="collapseThree">
                                    3. Envoi des billets <span class="fa fa-shopping-cart"></span>
                                </button>
                            </h2>
                        </div>
                        <div id="checkoutStep3" class="collapse" aria-labelledby="headingThree"
                             data-parent="#checkoutAccordion">
                            <div class="card-body">
                                <div class="container">

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headingThree">
                            <h2 class="mb-0">
                                <button class="btn btn-link collapsed" type="button" data-toggle="collapse"
                                        data-target="#checkoutStep4" aria-expanded="false" aria-controls="collapseFour">
                                    4. Paiement <span class="fa fa-paypal"></span>
                                </button>
                            </h2>
                        </div>
                        <div id="checkoutStep4" class="collapse" aria-labelledby="headingThree"
                             data-parent="#checkoutAccordion">
                            <div class="card-body">
                                <div class="" id="paymentMode">
                                    <div id="btnPay" class="card card-body col-sm-3">
                                        <script src="https://www.paypal.com/sdk/js?client-id=AXZ-9C193mTXkOfkwZ0ehMUiaNbVXM20I9xbh65Rk8HseaqLYuOJxjCy6wpyaCfPRaWmvfAzo5S_FwIU&currency=EUR"></script>
                                        <script>paypal.Buttons({
                                                style: {
                                                    layout: 'horizontal'
                                                },
                                                createOrder: function (data, actions) {
                                                    // Set up the transaction
                                                    return actions.order.create({
                                                        purchase_units: [{
                                                            application_context: {
                                                                brand_name: 'Ivenco',
                                                                return_url: '/res_billet/checkout',
                                                                cancel_url: '/res_billet/cancel'
                                                            },
                                                            amount: {
                                                                breakdown: {
                                                                    item_total: {
                                                                        currency_code: "EUR",
                                                                        value: "{{ not app.session.get('totalPrice') ? "0" : app.session.get('totalPrice') }}"
                                                                    }
                                                                },
                                                                currency_code: "EUR",
                                                                value: "{{ not app.session.get('totalPrice') ? "0" : app.session.get('totalPrice') }}"
                                                            },
                                                            items:

                                                                [

                                                                    {% for item in cart %}
                                                                    {
                                                                        name: "{{ item.name }}",
                                                                        quantity: "{{ item.quantity }}",
                                                                        currency: "EUR",
                                                                        unit_amount: {
                                                                            value: "{{ item.price }}",
                                                                            currency_code: "EUR"
                                                                        }
                                                                    },
                                                                    {% endfor %}

                                                                ]


                                                        }],

                                                    });
                                                },
                                                onApprove: function (data, actions) {
                                                    // Capture the funds from the transaction
                                                    return actions.order.capture().then(function (details) {
                                                        // Show a success message to your buyer
                                                        alert('Transaction completed by ' + details.payer.name.given_name);
                                                    });
                                                }
                                            }).render('#btnPay');</script>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="row">
                    <div class="col-sm-12">
                        <h4>Aucun billet à commander</h4>
                        <a href="{{ path('viewList') }}" class="btn btn-warning"><i class="fa fa-angle-left"></i>
                            Retourner à la
                            page d'accueil</a>
                    </div>
                </div>
            {% endif %}
        </section>
    {% endblock %}
    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('js/cartManagement.js') }}"></script>
    {% endblock %}
{% endblock %}
{% block contact %}
{% endblock %}

